{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "ES6", // Generate code for ECMAScript 2017
    "module": "commonjs", // Specify module code generation: CommonJS
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "moduleResolution": "node", // Resolve modules using Node.js-style module resolution
    "baseUrl": "./src", // Base directory to resolve non-relative module names
    "outDir": "./dist", // Redirect output structure to the directory
    "sourceMap": true, // Generate source maps for easier debugging
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "noUnusedLocals": true, // Report errors on unused local variables
    "noImplicitReturns": true, // Report error when not all code paths in function return a value
  },
  "exclude": ["dist/**/*", "node_modules", "**/*.test.ts"],
}
